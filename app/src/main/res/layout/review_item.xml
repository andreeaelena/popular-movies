<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/review_item_margin_top_bottom"
    android:paddingBottom="@dimen/review_item_margin_top_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/blue_gray_800">

        <TextView
            style="@style/DetailMovieSectionLabel"
            android:id="@+id/reviewer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reviewed_by"/>

        <TextView
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/review_content_padding"
            android:paddingRight="@dimen/review_content_padding"
            android:paddingBottom="@dimen/review_content_padding"
            android:textColor="@color/white"/>

    </LinearLayout>

</FrameLayout>